<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomCirclePageIndicator" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="fillColor">#FF000000</item>
        <item name="pageColor">#88FF0000</item>
        <item name="strokeColor">#FF000000</item>
        <item name="strokeWidth">2dp</item>
        <item name="radius">4dp</item>
        <item name="centered">true</item>
    </style>

</resources>
